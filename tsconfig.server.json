{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"noEmit": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["next-env.d.ts", "src/server/server.ts", "src/di/index.ts"],
	"exclude": ["node_modules", "**/*/__mocks__/*.ts", "**/*.test.ts", "**/*.spec.ts", "node_modules", ".git"]
}
